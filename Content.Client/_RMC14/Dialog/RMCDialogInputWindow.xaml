<controls:RMCDialogInputWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Dialog"
    xmlns:ui="clr-namespace:Content.Client._RMC14.UserInterface"
    MinSize="300 135">
    <BoxContainer Orientation="Vertical">
        <Label Name="MessageLabel" Access="Public" />
        <ui:BlueHorizontalSeparator />
        <LineEdit Name="MessageLineEdit" Access="Public" />
        <TextEdit Name="MessageTextEdit" Access="Public" VerticalExpand="True" MinSize="500 150" />
        <BoxContainer Orientation="Horizontal" Margin="0 5">
            <Control HorizontalExpand="True" />
            <Button Text="Cancel" Name="CancelButton" Access="Public" StyleClasses="OpenBoth" MinWidth="100" Margin="0 0 20 0" />
            <Button Text="Confirm" Name="OkButton" Access="Public" StyleClasses="OpenBoth" MinWidth="100" />
            <Control HorizontalExpand="True" />
        </BoxContainer>
    </BoxContainer>
</controls:RMCDialogInputWindow>
